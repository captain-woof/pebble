{
  "name": "@pebble/sdk",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "main": "./dist/pebble-sdk.umd.cjs",
  "module": "./dist/pebble-sdk.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/pebble-sdk.js",
      "require": "./dist/pebble-sdk.umd.cjs"
    }
  },
  "description": "SDK for Pebble's client-side functionalities",
  "scripts": {
    "build": "pnpm run smart-contracts:typechain && pnpm run smart-contracts:abi && pnpm run lint && pnpm run test && pnpm run build:vite && pnpm run build:types",
    "smart-contracts:typechain": "cd ../pebble-contracts/ && forge clean && forge build --via-ir --skip test --skip script && cd ../pebble-sdk && rm -r types/pebble-contracts; mkdir -p types/pebble-contracts && typechain --target ethers-v5 --out-dir types/pebble-contracts \"../pebble-contracts/out/Pebble*.sol/**/*.json\"",
    "smart-contracts:abi": "mkdir -p abi && cp -r ../pebble-contracts/out/Pebble*.sol/*.json abi/",
    "build:vite": "vite build",
    "build:types": "npx tsc",
    "lint": "eslint --fix .",
    "test": "jest ."
  },
  "keywords": [
    "pebble",
    "pebble-protocol",
    "messaging-protocol",
    "message-on-blockchain",
    "multiple-participants-messaging"
  ],
  "author": "Sohail Saha <captainwoof.official@gmail.com>",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.7.2",
    "@noble/secp256k1": "^1.7.1",
    "@typechain/ethers-v5": "^10.2.0",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "ethers": "5",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.4"
  },
  "peerDependencies": {
    "ethers": "5",
    "@noble/secp256k1": "^1.7.1"
  }
}